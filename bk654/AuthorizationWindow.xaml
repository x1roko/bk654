<Window x:Class="bk654.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bk654"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="400" Width="800">
    <Grid>
        <StackPanel>
            <Rectangle Fill="BurlyWood"  Height="100" Width="800"/>
            <Rectangle Fill="Green" Height="100" Width="800"/>
            <Rectangle Fill="Red" Height="100" Width="800"/>
            <Rectangle Fill="SaddleBrown" Height="100" Width="800"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Center">
            <Grid>
                <Label Content="Адрес эллектроной почты:"/>
                <TextBox x:Name="emailTextBox" HorizontalAlignment="Center" Width="200"/>
            </Grid>
            <Button x:Name="authorizationButton" Content="Авторизоваться" Click="AuthorizationButton_Click" Width="200" />
            <Button x:Name="registerButton" Content="Зарегестрироваться" Click="RegisterButton_Click" Width="200"/>
        </StackPanel>
    </Grid>
</Window>
